              "type": "string",
              "metadata": {
                "description": "The delegated scope for OAuth2 permission grants, required if type is \"Scope\"."
              }
            }
          },
          "imports": {
            "microsoftGraphV1": {
              "provider": "MicrosoftGraph",
              "version": "1.0.0"
            }
          },
          "resources": {
            "application": {
              "import": "microsoftGraphV1",
              "type": "Microsoft.Graph/applications@v1.0",
              "properties": {
                "uniqueName": "[parameters('uniqueName')]",
                "displayName": "[parameters('displayName')]",
                "requiredResourceAccess": [
                  {
                    "resourceAccess": [
                      {
                        "id": "[parameters('permissionIdentifier')]",
                        "type": "[parameters('type')]"
                      }
                    ],
                    "resourceAppId": "[parameters('graphAppId')]"
                  }
                ]
              }
            },
            "applicationServicePrincipal": {
              "import": "microsoftGraphV1",
              "type": "Microsoft.Graph/servicePrincipals@v1.0",
              "properties": {
                "appId": "[reference('application').appId]"
              },
              "dependsOn": [
                "application"
              ]
            },
            "graphServicePrincipal": {
              "existing": true,
              "import": "microsoftGraphV1",
              "type": "Microsoft.Graph/servicePrincipals@v1.0",
              "properties": {
                "appId": "[parameters('graphAppId')]"
              }
            },
            "grants": {
              "condition": "[equals(parameters('type'), 'Scope')]",
              "import": "microsoftGraphV1",
              "type": "Microsoft.Graph/oauth2PermissionGrants@v1.0",
              "properties": {
                "clientId": "[reference('applicationServicePrincipal').id]",
                "consentType": "AllPrincipals",
                "resourceId": "[reference('graphServicePrincipal').id]",
                "scope": "[parameters('delegatedScope')]"
              },
              "dependsOn": [
                "applicationServicePrincipal",
                "graphServicePrincipal"
              ]
            },
            "appRoleAssignment": {
              "condition": "[equals(parameters('type'), 'Role')]",
              "import": "microsoftGraphV1",
              "type": "Microsoft.Graph/appRoleAssignedTo@v1.0",
              "properties": {
                "principalId": "[reference('applicationServicePrincipal').id]",
                "resourceId": "[reference('graphServicePrincipal').id]",
                "appRoleId": "[parameters('permissionIdentifier')]"
              },
              "dependsOn": [
                "applicationServicePrincipal",
                "graphServicePrincipal"
              ]
            }
          },
          "outputs": {
            "applicationAppId": {
              "type": "string",
              "value": "[reference('application').appId]"
            },
            "applicationObjectId": {
              "type": "string",
              "value": "[reference('application').id]"
            },
            "applicationServicePrincipalId": {
              "type": "string",
              "value": "[reference('applicationServicePrincipal').id]"
            }
          }
        }
