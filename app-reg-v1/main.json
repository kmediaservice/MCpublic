    "delegatedScope": {
      "type": "string",
      "metadata": {
        "description": "The delegated scope for OAuth2 permission grants, required if type is \"Scope\"."
      }
    }
  },
  "imports": {
    "microsoftGraphV1": {
      "provider": "MicrosoftGraph",
      "version": "1.0.0"
    }
