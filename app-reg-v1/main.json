  "resources": {
    "application": {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "application",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "uniqueName": {
            "value": "[parameters('uniqueName')]"
          },
          "displayName": {
            "value": "[parameters('displayName')]"
          },
          "permissionIdentifier": {
            "value": "[parameters('permissionIdentifier')]"
          },
          "type": {
            "value": "[parameters('type')]"
          },
          "graphAppId": {
            "value": "[parameters('graphAppId')]"
          },
          "delegatedScope": {
            "value": "[parameters('delegatedScope')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "languageVersion": "2.1-experimental",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.36.1.42791",
              "templateHash": "6170999938745297924"
            }
          },
          "parameters": {
            "uniqueName": {
              "type": "string",
              "metadata": {
                "description": "Unique name for the app registration."
              }
            },
            "displayName": {
              "type": "string",
              "metadata": {
                "description": "Display name for the app registration."
              }
            },
            "permissionIdentifier": {
              "type": "string",
              "metadata": {
                "description": "The permission identifier (ID) for the required permission."
              }
            },
            "type": {
              "type": "string",
              "allowedValues": [
                "Role",
                "Scope"
              ],
              "metadata": {
                "description": "The type of resource access, either \"Role\" or \"Scope\"."
              }
            },
